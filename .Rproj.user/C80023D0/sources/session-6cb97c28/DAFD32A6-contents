#Are homophilous ties among religious outgroups more likely to be especially close?

prop.table(table(df_w3_comb_data$yourelig_1, df_w3_comb_data$close),1)


prop.table(table(df_w3_comb_data$same_relig, df_w3_comb_data$close),1)


table(df_w3_comb_data$yourelig_1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "No Religion")

prop.table(table(df_sub$same_relig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Catholic")

prop.table(table(df_sub$same_relig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Protestant")

prop.table(table(df_sub$same_relig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Other Religion")

prop.table(table(df_sub$same_relig, df_sub$close),1)






df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "No Religion")

prop.table(table(df_sub$altrelig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Catholic")

prop.table(table(df_sub$altrelig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Protestant")

prop.table(table(df_sub$altrelig, df_sub$close),1)

df_sub <- df_w3_comb_data %>% 
  filter(yourelig_1 == "Other Religion")

prop.table(table(df_sub$altrelig, df_sub$close),1)


